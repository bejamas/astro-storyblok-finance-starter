---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import { Image } from 'astro:assets'
const { blok } = Astro.props
---

<section {...storyblokEditable(blok)}>
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-16 p-6 md:p-16 bg-white">
      <div class="flex flex-col justify-between items-start gap-8">
        {blok.heading && blok.heading.length > 0 && (
          <StoryblokComponent blok={blok.heading[0]} />
        )}
        <div class="flex flex-col justify-center items-start grow max-w-[476px]">
          <h3 class="text-black text-3xl lg:text-5xl leading-[120%] font-adamina mb-4">{blok.headline}</h3>
          {blok.lead && (
            <p class="mb-8 text-black opacity-65">
              {blok.lead}
            </p>
          )}
        </div>
        {blok.button && blok.button.length > 0 && (
          <StoryblokComponent blok={blok.button[0]} />
        )}
      </div>
      <div>
        <Image
          src={`${blok.image.filename}/m/906x0`}
          alt={blok.image.alt}
          width={453}
          height={543}
          layout="full-width"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
