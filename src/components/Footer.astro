---
import { getTransLink } from '../utils/i18n'
import { getHref } from '../utils/getHref'
const { language, translate, siteSettings } = Astro.props
---

<footer class="w-full text-white bg-[#0F0F0F]">
  <div class="container mx-auto px-6 py-16">
    <div class="grid lg:grid-cols-6 gap-x-5 gap-y-10">
      <div class="lg:col-span-2">
        <div class="flex items-center gap-3">
          <a href={getTransLink(language, `/`)}>
            <img src={siteSettings.logo.filename} alt={siteSettings.logo.alt} />
          </a>
          <!-- <div class="font-medium capitalize text-white">Company Name</div> -->
        </div>
      </div>

      <div class="lg:col-span-3">
        <div class="mb-8">
          <h2 class="text-xl font-medium mb-4">{translate.companyDetails}</h2>
          <p class="max-w-[415px] opacity-65">{siteSettings.company_description}</p>
        </div>

        <address class="not-italic space-y-3">
